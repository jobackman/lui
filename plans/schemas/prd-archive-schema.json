{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lui.local/schemas/prd-archive-schema.json",
  "title": "Product Requirements Document (Archived)",
  "description": "Schema for archived product requirements in plans/archive/archived-*.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["category", "description", "steps", "passes", "archivedAt", "originalIndex"],
    "properties": {
      "category": {
        "type": "string",
        "description": "Requirement category (e.g., Feature, Bug Fix, Refactoring, UI Enhancement, Data, Infrastructure, Setup, Documentation)",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "description": "Brief description of the requirement",
        "minLength": 1
      },
      "steps": {
        "type": "array",
        "description": "Verification steps to confirm completion",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1
      },
      "passes": {
        "type": "boolean",
        "description": "Completion status (true = completed, false = active/cancelled)"
      },
      "archivedAt": {
        "type": "string",
        "format": "date-time",
        "description": "ISO 8601 timestamp when requirement was archived"
      },
      "originalIndex": {
        "type": "integer",
        "minimum": 0,
        "description": "Original position in prd.json before archiving"
      }
    },
    "additionalProperties": false
  }
}
